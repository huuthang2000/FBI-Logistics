<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4355C1"
    android:padding="20dp"
    android:gravity="bottom"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:elevation="6dp"
        android:outlineAmbientShadowColor="@color/black"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                android:elevation="5dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="70dp"/>
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_nameInfoSale"
                android:textColor="@color/btn_color"
                android:textSize="18dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvposition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_linkInfoSale"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/btn_color"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btnLogoutt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/sigout2"
                    android:textSize="16sp"
                    android:background="@drawable/layout_banel"
                    android:textStyle="bold"
                    ></Button>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>